<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_main_alluser_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ln_bg_color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_group_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ln_bg_color"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_username_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/Royal_Blue"
            tools:text="abc" />


        <TextView
            android:id="@+id/txt_company_name_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:textColor="@color/Dark_green"
            android:textSize="12dp"
            tools:text="company" />

    </LinearLayout>
</LinearLayout>