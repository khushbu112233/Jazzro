<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="1">

                <com.jlouistechnology.Jazzro.Widget.TextView_Regular
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.20"
                    android:text="Name"
                    android:textColor="@color/black_40"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:orientation="vertical">

                    <com.jlouistechnology.Jazzro.Widget.Edittext_Bold
                        android:id="@+id/edName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="Group name"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/new_black"
                        android:textColorHint="@color/black_40"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/black_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:weightSum="1">

                <com.jlouistechnology.Jazzro.Widget.TextView_Regular
                    android:id="@+id/txt_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.20"
                    android:text="Color"
                    android:textColor="@color/black_40"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/llSipner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/spinner1"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="left"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="40dp"
                            android:visibility="invisible" />

                        <com.jlouistechnology.Jazzro.Widget.TextView_Bold
                            android:id="@+id/txtBackgruondColor"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="40dp"
                            android:gravity="left"
                            android:text="Choose a color"
                            android:textColor="@color/black_40"
                            android:textColorHint="@color/black_40"
                            android:textSize="16sp"
                            android:visibility="visible" />


                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/black_10" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/black_10" />


            <com.jlouistechnology.Jazzro.Widget.TextView_Regular
                android:id="@+id/txtDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f2f2f2"
                android:padding="10dp"
                android:text="Delete group"
                android:textColor="@color/red_edit_group"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_10" />

            <ListView
                android:id="@+id/contactListview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"></ListView>

        </LinearLayout>

    </LinearLayout>
</layout>